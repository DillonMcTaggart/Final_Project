<h2>
  <%= link_to "Genres", root_path%> /
  <%= @genre.title%>/
  Video Games
</h2>

<ol>
  <% @vgames.each do |vgame| %>
    <li>
      <%= vgame.title %> (<%= number_to_currency vgame.price %>)

        <%= form_tag order_items_path do %>
          <%= hidden_field_tag :vgame_id, vgame.id%>
          <%= number_field_tag :quantity, 1%>
          <%= submit_tag "Add to cart" %>
          <% end %>
      <ul>
        <% vgame.vgame_variants.each do |variant|%>
          <li><%= variant.title%> (<%= number_to_currency variant.price %>)</li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ol>