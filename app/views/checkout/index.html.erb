<h2>Current Cart</h2>

<table>
  <thead>
    <tr>
      <td>Game</td>
      <td>Price</td>
      <td>Quantity</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% cart.each do |item| %>
      <tr>
        <td><%= item.title%></td>
        <td><%= number_to_currency item.price %></td>
        <td><%= session[:shopping_cart][item.id.to_s] %></td>
        <td>
          <%= button_to checkout_path(item), method: :delete do %>
            Remove From Cart
          <% end %>
        </td>
      </tr>
    <%end%>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="4">
        </td>
      </tr>
    </tfoot>
  </table>

  <%= link_to 'Checkout', checkout_purchase_path%>